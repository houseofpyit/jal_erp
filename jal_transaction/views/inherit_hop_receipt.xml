        <field name="model">hop.receipt</field>
        <field name="inherit_id" ref="hop_account.hop_receipt_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cost_center_id']" position="after">
                <field name="sale_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
