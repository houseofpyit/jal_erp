<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="master_res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">master.res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="master.party_mst_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='remarks']" position="after">
                <field name="team_id" options="{'no_open': True, 'no_create': True}"/>
                <field name="business_type" />
            </xpath>
            <xpath expr="//field[@name='party_group_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='commission_rate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='transport_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='agent_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='party_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='rates']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tcs_applicable']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tds_applicable']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='remarks']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='area_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tan_no']" position="after">
                <field name="msme_type" attrs="{'invisible': [('acc_type','!=','PURCHASE_PARTY')]}"/>
            </xpath>
            <xpath expr="//page[@name='rates']" position="before">
                <page name="account" string="Account" autofocus="autofocus">
                    <group>
                        <group>
                            <field name="tcs_applicable"/>
                            <field name="tds_applicable"/>
                        </group>   
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_party_mst_international" model="ir.actions.act_window">
        <field name="name">Party Master</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('acc_type','=','SALE_PARTY')]</field>
        <field name="context">{
                'default_acc_type': 'SALE_PARTY',
                'default_business_type':'international'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Party Master</p>
        </field>
    </record>

    <record id="action_party_mst_domestic" model="ir.actions.act_window">
        <field name="name">Party Master</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('acc_type','=','SALE_PARTY')]</field>
        <field name="context">{
                'default_acc_type': 'SALE_PARTY',
                'default_business_type':'domestic'
        }</field>        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Party Master</p>
        </field>
    </record>

    <record id="action_party_mst_trading" model="ir.actions.act_window">
        <field name="name">Party Master</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('acc_type','=','SALE_PARTY')]</field>
        <field name="context">{
                'default_acc_type': 'SALE_PARTY',
                'default_business_type':'trading'
        }</field>        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Party Master</p>
        </field>
    </record>

</odoo>
