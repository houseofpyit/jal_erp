<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_hop_purchasebill_form_view_inherit" model="ir.ui.view">
        <field name="name">transaction.hop.purchasebill.form.view.inherit</field>
        <field name="model">hop.purchasebill</field>
        <field name="inherit_id" ref="transaction.purchasebill_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_bill_detail']" position="after">
                <page name="attachment_det" string="Document Details">
                    <group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="picking_id" readonly="1" force_save="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_purchasebillreturn_confirm_btn" model="ir.ui.view">
        <field name="name">purchase.bill.return.confirm.button</field>
        <field name="model">hop.purchasebillreturn</field>
        <field name="inherit_id" ref="transaction.purchasebillreturn_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <field name="stage" widget="statusbar"
                           statusbar_visible="draft,done"/>

                    <button
                            name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('picking_id', '!=', False)]}"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                        name="action_view_picking"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('picking_id', '=', False)]}">
                    <field name="picking_id" widget="statinfo" string="Picking"/>
                </button>
            </xpath>

        </field>
    </record>


</odoo>
