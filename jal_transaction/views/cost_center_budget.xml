<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_cost_center_budget_form" model="ir.ui.view">
            <field name="name">cost.center.budget.form</field>
            <field name="model">cost.center.budget</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="cost_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="amount" />
                                <field name="per_month_cost" />
                            </group>
                            <group>
                                <field name="date" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_cost_center_budget_tree" model="ir.ui.view">
            <field name="name">cost.center.budget.tree</field>
            <field name="model">cost.center.budget</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="cost_id"/>
                    <field name="date"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="action_cost_center_budget" model="ir.actions.act_window">
            <field name="name">Cost Center</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cost.center.budget</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
</odoo>