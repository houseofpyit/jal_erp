<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_template_form_view_transaction" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.transaction</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_variant_id']" position="after">
                <field name="cost_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
