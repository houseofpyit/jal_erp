<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
     <record id="paper_formate_purchase_order_form" model="report.paperformat">
        <field name="name">Purchase Order Papare Formate</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_purchase_order_form" model="ir.actions.report">
        <field name="name">Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jal_transaction.report_purchase_order</field>
        <field name="report_file">jal_transaction.report_purchase_order</field>
        <field name="paperformat_id" ref="jal_transaction.paper_formate_purchase_order_form" />
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="purchase.action_report_purchase_order" model="ir.actions.report">
        <field name="name">Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase.report_purchaseorder</field>
        <field name="report_file">purchase.report_purchaseorder</field>
        <field name="print_report_name">
            (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
            'Purchase Order - %s' % (object.name))</field>
        <field name="binding_model_id" ref=""/>
        <field name="binding_type">report</field>
    </record>

    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
        <field name="name">Request for Quotation</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase.report_purchasequotation</field>
        <field name="report_file">purchase.report_purchasequotation</field>
        <field name="print_report_name">'Request for Quotation - %s' % (object.name)</field>
        <field name="binding_model_id" ref=""/>
        <field name="binding_type">report</field>
    </record>
    
</odoo>