<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="hop.ledger.field" id="hop_account.gen2">
        <field name="table_name">hop_gen_purchase</field>
        <field name="serial">bill_no</field>
        <field name="srchr">bill_chr</field>
        <field name="bill_no">bill_number</field>
        <field name="date">date</field>
        <field name="ref_ac_id">party_id</field>
        <field name="ac_id">book_id</field>
        <field name="remarks">concat('Bill No : ',a.bill_no,case when a.bill_chr != '' then '/'else '' end ,a.bill_chr,case when a.remarks != '' then '  Remarks : 'else '' end ,a.remarks)</field>
        <field name="dr_amt">tot_taxable</field>
        <field name="cr_amt">0</field>
        <field name="code">OP</field>
        <field name="control_id">id</field>
        <field name="cgst_id"></field>
        <field name="sgst_id"></field>
        <field name="igst_id"></field>
        <field name="ugst_id"></field>
        <field name="cess_id"></field>
        <field name="round_off_id"></field>
        <field name="doc_no">bill_number</field>
        <field name="cheque"></field>
        <field name="cheque_date"></field>
        <field name="clearing_date"></field>
        <field name="cond"> and a.single_multi_book = 'Single_Book'</field>
        <field name="active">True</field>
    </record>  

    <record model="hop.ledger.field" id="multy_book_post_gen">
        <field name="table_name">hop_summary_line</field>
        <field name="serial">bill_no</field>
        <field name="srchr">bill_chr</field>
        <field name="bill_no">bill_no</field>
        <field name="date">date</field>
        <field name="ref_ac_id">party_id</field>
        <field name="ac_id">book_id</field>
        <field name="remarks">concat('Bill No : ',a.bill_no,case when a.bill_chr != '' then '/'else '' end ,a.bill_chr)</field>
        <field name="dr_amt">total_amount</field>
        <field name="cr_amt">0</field>
        <field name="code">oP</field>
        <field name="control_id">id</field>
        <field name="cgst_id"></field>
        <field name="sgst_id"></field>
        <field name="igst_id"></field>
        <field name="ugst_id"></field>
        <field name="cess_id"></field>
        <field name="round_off_id"></field>
        <field name="doc_no">bill_no</field>
        <field name="cheque"></field>
        <field name="cheque_date"></field>
        <field name="clearing_date"></field>
        <field name="cond">and a.single_multi_book = 'Multi_Book'</field>
        <field name="active">True</field>
    </record> 
    
</odoo>
