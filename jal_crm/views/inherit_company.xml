<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_form_view_inherit" model="ir.ui.view">
        <field name="name">res.company.form.view.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Header Image" name="company_header">
                    <field name="header_image" widget="image"/>
                </page>
                <page string="Approved Sign" name="approved_sign">
                    <group>
                        <field name="approved_sign" widget="image"
                               class="oe_avatar"
                               options="{'preview_image': 'approved_sign'}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
