<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- packing -->
    <record id="packing_mst_form" model="ir.ui.view">
        <field name="name">packing.mst.form</field>
        <field name="model">packing.mst</field>
        <field name="arch" type="xml" >
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="capacity_id" options="{'no_quick_create': True}"/>
                            <field name="pouch_name_id" options="{'no_quick_create': True}"/>
                            <field name="lid_color_id" options="{'no_quick_create': True}"/>
                        </group>
                        <group>
                            <field name="branding_id" options="{'no_quick_create': True}"/>
                            <field name="drum_color_id" options="{'no_quick_create': True}"/>
                            <field name="scoops_id" options="{'no_quick_create': True}"/>
                            <field name="outer_cartoons_id" options="{'no_quick_create': True}"/>
                        </group>
                    </group>                  
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="packing_mst_tree" model="ir.ui.view">
        <field name="name">packing.mst.tree</field>
        <field name="model">packing.mst</field>
        <field name="arch" type="xml" >
            <tree sample="1">
                <field name="name"/>
                <field name="capacity_id"/>
                <field name="pouch_name_id"/>
                <field name="lid_color_id"/>
                <field name="branding_id"/>
                <field name="drum_color_id"/>
                <field name="scoops_id"/>
                <field name="outer_cartoons_id"/>
            </tree>
        </field>
    </record>

    <record id="action_packing_mst" model="ir.actions.act_window">
        <field name="name">Packing</field>
        <field name="res_model">packing.mst</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Record</p>
        </field>
    </record>

<!-- packing -->
    <record id="capacity_mst_form" model="ir.ui.view">
        <field name="name">capacity.mst.form</field>
        <field name="model">capacity.mst</field>
        <field name="arch" type="xml" >
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1" />
                        </group>
                        <group>
                            <field name="packaging_type" required="1" />
                        </group>
                    </group>  
                    <group>
                        <group>  
                            <field name="weight" />
                            <field name="packing_name_id" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                        </group>  
                    </group>                
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="capacity_mst_tree" model="ir.ui.view">
        <field name="name">capacity.mst.tree</field>
        <field name="model">capacity.mst</field>
        <field name="arch" type="xml" >
            <tree sample="1">
                <field name="name"/>
                <field name="weight"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="action_capacity_mst" model="ir.actions.act_window">
        <field name="name">Capacity Per Drum</field>
        <field name="res_model">capacity.mst</field>
