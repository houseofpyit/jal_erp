<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_lead" type="object" class="oe_stat_button" icon="fa-address-card" attrs="{'invisible': [('lead_count', '=', 0)]}">
                    <field name="lead_count" widget="statinfo" string="Lead"/>
                </button>
                <button name="action_view_pur_req" type="object" class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('purchase_req_count', '=', 0)]}">
                    <field name="purchase_req_count" widget="statinfo" string="Purchase Requisition"/>
                </button>
            </xpath>    
            <xpath expr="//button[@name='action_quotation_send']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,create_pi,sale,close_order</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="before">
                <button name="action_create_pi" string="Create" class="btn-primary" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_confirm" id="action_confirm" data-hotkey="v" string="Confirm PI" class="btn-primary" type="object" attrs="{'invisible': [('state', '!=', 'create_pi')]}"/>
                <button name="create_purchase_requisite" string="Send Purchase Request" class="btn-primary" type="object" attrs="{'invisible': ['|',('state', '!=', 'sale'),('purchase_req_count', '!=', 0)]}"/>
                
                <button name="action_acc_aprove" string="Account Approve" type="object" class="btn-primary" attrs="{ 'invisible': [ '|',('state', '!=', 'create_pi'), ('is_acc_approve', '!=', False)]}"/>
                <button name="action_dis_aprove" string="Dispatch Approve" type="object" class="btn-primary" attrs="{ 'invisible': [ '|',('state', '!=', 'create_pi'), ('is_dis_approve', '!=', False)]}"/>
                <button name="action_team_aprove" string="Sales Team Approve" type="object" class="btn-primary" attrs="{ 'invisible': [ '|',('state', '!=', 'create_pi'), ('is_team_approve', '!=', False)]}"/>
                
                <button name="action_acc_aprove_close" string="Account Approve (Close)" type="object" class="btn-primary" attrs="{ 'invisible': [ '|', ('state', '!=', 'sale'), ('is_acc_approve_pi', '!=', False)]}"/>
                <button name="action_team_aprove_close" string="Sales Team (Close)" type="object" class="btn-primary" attrs="{ 'invisible': [ '|', ('state', '!=', 'sale'), ('is_team_approve_pi', '!=', False)]}"/>
                <button name="action_close_order" string="Close Order" class="btn-primary" type="object" attrs="{'invisible': ['|','|',('state', '!=', 'sale'),('is_acc_approve_pi', '=', False),('is_team_approve_pi', '=', False)]}"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>	
            <!-- <xpath expr="//field[@name='team_id']" position="after">
                <field name="business_type" />
            </xpath>	 -->
            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="attrs">{'invisible': [('business_type', '==', 'international')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="currency_id" options="{'no_create': True}" readonly="0" invisible="1" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="jal_currency_id" options="{'no_create': True}" readonly="0" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="bank_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="po_no" attrs="{'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="po_date" attrs="{'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <!-- <field name="reference" attrs="{'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')],'readonly': [('state', 'in', ('sale','close_order'))]}"/> -->

                <field name="freight" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')]}"/>
                <field name="insurance" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')]}"/>
                <field name="fob_rates" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')]}"/>
                <field name="inspection"  widget="radio" options="{'horizontal': true}" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')]}"/>
                <field name="lading_type" widget="radio" options="{'horizontal': true}" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': ['|',('business_type', '!=', 'international'),('state', '==', 'draft')]}"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('done','cancel','sale'))]}</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('done','cancel','sale'))]}</attribute>
            </xpath> -->
            <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div/field[@name='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div/button[@name='update_prices']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//page/group[@name='note_group']" position="before">
                <group>
                    <group>
                        <field name="conditions_id" domain="[('module_type', '=', 'sale')]" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('sale','close_order'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('sale','close_order'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('sale','close_order'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="close_date" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', 'in', ('sale','close_order'))],'invisible': [('close_date', '=', False)]}"/>
                <field name="incoterm_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="buyer_notify_id"  options="{'no_quick_create': True}" attrs="{'readonly': [('state', 'in', ('sale','close_order'))]}"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Approved Details" name="approved_details">
                    <field name="is_acc_approve" invisible="1" />
                    <field name="is_dis_approve" invisible="1" />
                    <field name="is_team_approve" invisible="1" />
                    <field name="is_acc_approve_pi" invisible="1" />
                    <field name="is_team_approve_pi" invisible="1" />
                    <field name="sale_approve_ids" readonly="1" force_save="1">
                        <tree editable="">
                            <field name="aprove_type"/>
                            <field name="status_type"/>
                            <field name="user_id"/>
                            <field name="date"/>
                            <field name="comment"/>
                        </tree>
                        <form> 
                            <sheet>
                                <group>
                                    <group>
                                        <field name="aprove_type"/>
                                        <field name="user_id"/>
                                    </group>
                                    <group>
                                        <field name="date"/>
                                        <field name="comment"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                                    
                    </field>
                </page>
                <page string="Customer Document" name="approved_details">
                    <group name="documentation_for_customer" string="Documentation for the Customer">
                        <field name="attachment_invoice1_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                        <field name="attachment_packing_ph1_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                        <field name="attachment_certificate1_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                        <field name="attachment_bill_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                        <field name="attachment_certificate2_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                        <field name="attachment_insurance_sale_ids" widget="many2many_binary" attrs="{'readonly': [('state','in',('sale','close_order'))]}"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="terms_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="country_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="port_id" domain="[('country_id', '=', country_id)]" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="palletized_type" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="business_type" invisible="1" attrs="{'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="display_name_on_pi" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <!-- <field name="shipping_id" domain="[('display_name_on_pi','=', 'shipping_name')]" options="{'no_quick_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/> -->
                <field name="product_id" domain="[('is_shipping','=', True)]" options="{'no_create': True}" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <!-- <field name="product_shipping_id" domain="[('display_name_on_pi','=', 'product_name')]" options="{'no_quick_create': True}" attrs="{'invisible': ['|',('display_name_on_pi', '=', 'shipping_name'),('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/> -->
                <field name="buyer_ref_details" attrs="{'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="product_expiry" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="company_id" options="{'no_create': True}" attrs="{'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="label_type" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
                <field name="total_containers" attrs="{'invisible': [('business_type', '!=', 'international')],'readonly': [('state', 'in', ('sale','close_order'))]}"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_template_id']" position="before">
                <!-- <field name="shipping_id" width="150px" attrs="{'column_invisible': [('parent.business_type', '!=', 'international')]}"/> -->
                <field name="product_shipping_id" width="150px" attrs="{'column_invisible': [('parent.business_type', '!=', 'international')]}"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"></attribute>
                <!-- <tree string="Sales Order Lines" editable="bottom"></tree> -->
            </xpath>

            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                <!-- <field name="shipping_id" width="150px" domain="[('display_name_on_pi','=', 'shipping_name')]" options="{'no_quick_create': True}" attrs="{'invisible': [('parent.business_type', '!=', 'international')]}"/> -->
                <field name="product_shipping_id" width="150px" domain="[('display_name_on_pi','=', 'product_name')]" options="{'no_quick_create': True}" attrs="{'invisible': [('parent.business_type', '!=', 'international')]}"/>
                <field name="product_tmpl_id" string="Packing Type" options="{'no_create': True}" attrs="{'required': [('display_type', '=', False)]}" readonly="0" context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id, 'default_list_price': price_unit, 'default_description_sale': name}" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="product_configurator"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='analytic_tag_ids']" position="after">
                <field name="packing_type" invisible="1" attrs="{'invisible': [('parent.business_type', '!=', 'international')],'required': [('parent.business_type', '=', 'international'),('display_type', '=', False)]}"/>
                <!-- <field name="name_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': ['|',('packing_type', '=', 'pouch'),('packing_type', '=', False)]}" context="{'show_attribute': False}"/>
                <field name="bucket_cap_id" options="{'no_open': True, 'no_create': True}"  context="{'show_attribute': False}"/>
                <field name="branding_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': ['|',('packing_type', '=', 'pouch'),('packing_type', '=', False)]}" context="{'show_attribute': False}"/>
                <field name="lid_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', 'not in', ('bucket','usa_bucket'))]}" context="{'show_attribute': False}"/>
                <field name="drum_color_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', 'not in', ('bucket','usa_bucket'))]}" context="{'show_attribute': False}"/>
                <field name="scoops_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', '!=', 'usa_bucket')]}" context="{'show_attribute': False}"/>
                <field name="outer_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', '!=', 'usa_bucket')]}" context="{'show_attribute': False}"/>
                <field name="pouch_type" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', '!=', 'pouch')]}" context="{'show_attribute': False}"/>
                <field name="pouch_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', '!=', 'pouch')]}" domain="[('pouch_type', '=', pouch_type)]" context="{'show_attribute': False}"/>
                <field name="box_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('packing_type', '!=', 'pouch')]}" context="{'show_attribute': False}"/> -->
            </xpath>
            <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                <label for="packing_name" attrs="{'invisible': ['|',('parent.business_type', '!=', 'international'),('display_type', '=', 'line_section')]}"/>
                <field name="packing_name" attrs="{'invisible': ['|',('parent.business_type', '!=', 'international'),('display_type', '=', 'line_section')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/label[@for='customer_lead']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/div[@name='lead']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/div[@name='invoice_lines']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="packing_name" width="150px" attrs="{'column_invisible': [('parent.business_type', '!=', 'international')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/label[@for='name']" position="attributes">
                <attribute name="string">Loading Description</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="string">Loading Description</attribute>
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Final Product</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='product_template_id']" position="replace">
                <!-- <attribute name="width">150px</attribute>
                <attribute name="invisible">0</attribute>
                <attribute name="force_save">1</attribute> -->
                <field name="product_tmpl_id" width="150px" string="Packing Type" options="{'no_create': True}" readonly="0" context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id, 'default_list_price': price_unit, 'default_description_sale': name}" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" />
            </xpath>
            <xpath expr="//control/create[@name='add_note_control']" position="replace"/>
        </field>
    </record>

    <record id="sale_order_option_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.option.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='optional_products']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='customer_signature']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree_international" model="ir.ui.view">
        <field name="name">sale.order.tree.international</field>
        <field name="model">sale.order</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <tree string="Quotation" class="o_sale_order" sample="1" decoration-info="state in ['draft', 'sent']" decoration-muted="state == 'cancel'" banner_route='/sales/sale_quotation_onboarding_panel'>
                <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                <field name="create_date" string="Creation Date" widget="date" optional="show"/>
                <field name="commitment_date" widget="date" optional="hide"/>
                <field name="expected_date" widget="date" optional="hide"/>
                <field name="partner_id" readonly="1"/>
                <field name="country_id" />
                <field name="port_id" />
                <field name="lading_type" />
                <field name="tot_pcs" string="Total Quantity" />
                <field name="total_containers" string="Total Containers" />
                <field name="team_id" optional="hide"/>
                <field name="tag_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                <field name="amount_untaxed" sum="Total Tax Excluded" widget="monetary" optional="hide"/>
                <field name="amount_tax" sum="Tax Total" widget="monetary" optional="hide"/>
                <field name="net_amt" sum="Total Tax Included" widget="monetary" decoration-bf="1" optional="show"/>
                <field name="state" decoration-success="state == 'sale' or state == 'done'" decoration-info="state == 'draft' or state == 'sent'" widget="badge" optional="show"/>
                <field name="invoice_status" optional="hide"/>
                <field name="message_needaction" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_quotation_tree_international_create_pi" model="ir.ui.view">
        <field name="name">sale.order.tree.international.create.pi</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Quotation" class="o_sale_order" sample="1" decoration-info="state in ['draft', 'sent']" decoration-muted="state == 'cancel'" banner_route='/sales/sale_quotation_onboarding_panel'>
                <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                <field name="create_date" string="Creation Date" widget="date" optional="show"/>
                <field name="commitment_date" widget="date" optional="hide"/>
                <field name="expected_date" widget="date" optional="hide"/>
                <field name="partner_id" readonly="1"/>
                <field name="country_id" />
                <field name="port_id" />
                <field name="lading_type" />
                <field name="product_id" />
                <field name="tot_pcs" string="Total Quantity" />
                <field name="total_containers" string="Total Containers" />
                <field name="team_id" optional="hide"/>
                <field name="tag_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                <field name="amount_untaxed" sum="Total Tax Excluded" widget="monetary" optional="hide"/>
                <field name="amount_tax" sum="Tax Total" widget="monetary" optional="hide"/>
                <field name="net_amt" sum="Total Tax Included" widget="monetary" decoration-bf="1" optional="show"/>
                <field name="state" decoration-success="state == 'sale' or state == 'done'" decoration-info="state == 'draft' or state == 'sent'" widget="badge" optional="show"/>
                <field name="invoice_status" optional="hide"/>
                <field name="message_needaction" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_quotation_tree_international_confirm_pi" model="ir.ui.view">
        <field name="name">sale.order.tree.international.confirm.pi</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
