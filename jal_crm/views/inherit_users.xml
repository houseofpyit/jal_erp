<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_users_form_view_inherit" model="ir.ui.view">
        <field name="name">res.users.form.view.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div/field[@name='partner_id']" position="after">
                <field name="crm_team_id" />
            </xpath>
            <xpath expr="//group/field[@name='partner_id']" position="after">
                <field name="crm_team_id" options="{'no_create': True,'no_open': True}"/>
            </xpath>
        </field>
    </record>

</odoo>