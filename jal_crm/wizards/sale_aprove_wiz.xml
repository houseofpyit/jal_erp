<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_aprove_wiz_view" model="ir.ui.view">
        <field name="name">sale.aprove.wiz.form.view</field>
        <field name="model">sale.aprove.wiz</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="name" required="1"/>
                    <field name="aprove_type" invisible="1"/>
                </group>
                <footer>
                    <button string="Approve" name="action_approve_btn" type="object" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_aprove_wiz" model="ir.actions.act_window">
        <field name="name">Sale Approve</field>
        <field name="res_model">sale.aprove.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
