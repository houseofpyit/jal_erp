<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_sale_domestic">
            <t t-call="web.basic_layout">
                <div class="page">
                    <style>
                        td{
                            font-size:14px;
                            padding-left:10px;
                            padding-right:5px;
                        }
                        <!-- span{
                            padding:5px;
                        } -->
                        td, th, table {
                            border-collapse: collapse !important;
                        }
                    </style>
                
                    <t t-foreach="docs" t-as="o">
                        <table style="width:100%;border: 1px solid black;" v-align="top">
                            <tr>
                                <td width="20%" style="padding-left:10px;">
                                    <t t-if="o.company_id.logo">
                                        <img class="img img-responsive" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="width:160px; height:120px;" />
                                    </t>
                                </td>
                                <td width="80%" style="vertical-align: top; text-align:right;padding-right:10px;" >
                                        <b><span style="font-size:30px;" t-esc="o.company_id.name" /></b><br/>
                                        <span t-esc="o.company_id.street" /><span t-esc="o.company_id.street2" />
                                        <span t-esc="o.company_id.city" /><t t-if="o.company_id.state_id">
                                            ,<span t-esc="o.company_id.state_id.name" />
                                        </t><t t-if="o.company_id.zip">
                                            ,<span t-esc="o.company_id.zip" />
                                        </t><br/>
                                        <span>E.mail.: </span><span style="padding-right:4px;" t-esc="o.company_id.email"/>
                                        <span>Web: </span><span  t-esc="o.company_id.website"/><br/>
                                        <span>GSTIN: </span><span t-esc="o.company_id.vat" />
                                </td>
                            </tr>
                        </table>
                        <table style="width:100%;border: 1px solid black;border-top:none;" >
                            <tr>
                                <td colspan="2" style="padding:10px;border-bottom: 1px solid black;">
                                    <center><b><span>QUOTATION</span></b></center>
                                </td>
                            </tr>
                            <tr>
                                <td width="50%" style="padding:10px;">
                                    <b><span>SELLER</span></b>
                                </td>
                                <td width="50%" style="padding:10px;">
                                    <b><span>CONSIGNEE</span></b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-esc="o.company_id.street" /><br/>
                                    <span t-esc="o.company_id.street2" /><br/>
                                    <span t-esc="o.company_id.city" /><t t-if="o.company_id.state_id">
                                        ,<span t-esc="o.company_id.state_id.name" />
                                    </t><t t-if="o.company_id.zip">
                                        ,<span t-esc="o.company_id.zip" />
                                    </t><br/>
                                    <span style="padding-right:4px;" t-esc="o.company_id.email"/>
                                    <span  t-esc="o.company_id.website"/><br/>
                                    <span t-esc="o.company_id.vat" />
                                </td>
                                <td>
                                    <span t-esc="o.partner_id.street" /><br/>
                                    <span t-esc="o.partner_id.street2" /><br/>
                                    <span t-esc="o.partner_id.city" /><t t-if="o.partner_id.state_id">
                                        ,<span t-esc="o.partner_id.state_id.name" />
                                    </t><t t-if="o.partner_id.zip">
                                        ,<span t-esc="o.partner_id.zip" />
                                    </t><br/>
                                    <span style="padding-right:4px;" t-esc="o.partner_id.email"/>
                                    <span  t-esc="o.partner_id.website"/><br/>
                                    <span t-esc="o.partner_id.vat" />
                                </td>
                            </tr>
                            <tr>
                                <td style="border-top: 1px solid black;padding:10px;">
                                    <b><span>SHIP FROM </span></b>
                                </td>
                                <td style="border-top: 1px solid black;padding:10px;">
                                    <b><span>SHIP TO </span></b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span t-esc="o.company_id.street" /><br/>
                                    <span t-esc="o.company_id.street2" /><br/>
                                    <span t-esc="o.company_id.city" /><t t-if="o.company_id.state_id">
                                        ,<span t-esc="o.company_id.state_id.name" />
                                    </t><t t-if="o.company_id.zip">
                                        ,<span t-esc="o.company_id.zip" />
                                    </t><br/>
                                    <span style="padding-right:4px;" t-esc="o.company_id.email"/>
                                    <span  t-esc="o.company_id.website"/><br/>
                                    <span t-esc="o.company_id.vat" />
                                </td>
                                <td>
                                    <span t-esc="o.partner_id.street" /><br/>
                                    <span t-esc="o.partner_id.street2" /><br/>
                                    <span t-esc="o.partner_id.city" />,<span t-esc="o.partner_id.state_id.name" />,<span t-esc="o.partner_id.zip" /><br/>
                                    <span style="padding-right:4px;" t-esc="o.partner_id.email"/>
                                    <span  t-esc="o.partner_id.website"/><br/>
                                    <span t-esc="o.partner_id.vat" />
                                </td>
                            </tr>
                            <tr>
                                <td style="border-top: 1px solid black;padding:10px;">
                                    <b><span>DOCUMENT INFORMATION</span></b>
                                </td>
                                <td style="border-top: 1px solid black;padding:10px;">
                                    <b><span>CONSIGNEE INFORMATION</span></b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b><span style="padding-right:20px">GST No. :</span></b><span t-esc="o.partner_id.vat" /><br/>
                                    <b><span style="padding-right:32px">P.I No. :</span></b><span t-esc="o.name" /><br/>
                                    <b><span style="padding-right:20px">P.I Date :</span></b><t t-if="o.date_order">
                                        <span t-esc="o.date_order.strftime('%d/%m/%Y')"/>
                                    </t><br/>
                                    <b><span style="padding-right:20px">P.O NO. :</span></b><span t-esc="o.po_no" /><br/>
                                    <b><span style="padding-right:12px">P.O Date : </span></b><t t-if="o.po_date">
                                        <span t-esc="o.po_date.strftime('%d/%m/%Y')"/>
                                    </t>
                                </td>
                                <td>
                                    <b><span style="padding-right:40px">Name: </span></b><span t-esc="o.partner_id.name" /><br/>
                                    <b><span style="padding-right:31px">Tel No. :</span></b><span t-esc="o.partner_id.phone" /><t t-if="o.partner_id.mobile">
                                        - <span t-esc="o.partner_id.mobile" />
                                    </t><br/>
                                    <b><span style="padding-right:27px">Email ID:</span></b><span t-esc="o.partner_id.email" /> <br/>
                                    <b><span style="padding-right:20px">GST No. :</span></b><span t-esc="o.partner_id.vat" /><br/>
                                    <b><span style="padding-right:20px">PAN No. :</span></b><span t-esc="o.partner_id.vat" />
                                </td>
                            </tr>
                        </table>

                        <table width="100%" style="border: 1px solid black;border-top:none;">
                            <tr>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">SRL</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">DESCRIPTION OF GOODS</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">HSN CODE</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">PACKING TYPE</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">PACKAGES (UNITS)</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">TOTAL QUANTITY KG / LTR</th>
                                <th style="border-bottom: 1px solid black;border-right: 1px solid black;font-size:16px;text-align:center;">PRICE PER KG</th>
                                <th style="border-bottom: 1px solid black;font-size:16px;text-align:center;">TOTAL AMOUNT (IN INR)</th>
                            </tr>
                            <t t-set="srl" t-value="0" />
                            <t t-set="tot_pcs" t-value="0" />
                            <t t-set="tot_amt" t-value="0" />
                            <t t-set="tot_final_amt" t-value="0" />
                            
                            <t t-foreach="o.order_line" t-as="item">
                                <t t-set="srl" t-value="srl + 1" />
                                <t t-set="tot_pcs" t-value="tot_pcs + item.product_uom_qty" />
                                <t t-set="tot_amt" t-value="tot_amt + item.price_unit" />
                                <t t-set="tot_final_amt" t-value="tot_final_amt + item.price_subtotal" />
                                <tr>
                                    <td style="text-align: center;border-right: 1px solid black;">
                                        <span><span t-esc="srl"></span></span>
                                    </td>
                                    <td style="text-align: left;border-right: 1px solid black;">
                                        <span><span t-esc="item.product_id.name"></span></span>
                                    </td>
                                    <td style="text-align: left;border-right: 1px solid black;">
                                        <!-- <span ><span t-esc="item.hsn_id.name"></span></span> -->
                                    </td>
                                    <td style="text-align: right;border-right: 1px solid black;">
                                        <!-- <span ><span t-esc="item.product_uom_qty"></span></span> -->
                                    </td>
                                    <td style="text-align: center;border-right: 1px solid black;">
                                        <span ><span t-esc="item.product_id.uom_id.name"></span></span>
                                    </td>
                                    <td style="text-align: right;border-right: 1px solid black;">
                                        <span ><span t-esc="item.product_uom_qty"></span></span>
                                    </td>
                                    <td style="text-align: right;border-right: 1px solid black;">
                                        <span ><span t-esc="'%.2f'% (item.price_unit)"></span></span>
                                    </td>
                                    <td style="text-align: right;">
                                        <span ><span t-esc="'%.2f'% (item.price_subtotal)"></span></span>
                                    </td>
                                </tr>
                            </t>
                            <t t-foreach="range(10-srl)" t-as="l">
                                <tr>
                                    <td style="border-left:0px;border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="text-align:right;border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="text-align:right;border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="text-align:right;border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="border-bottom:none;border-top:none;border-right: 1px solid black;">
                                        <br></br>
                                    </td>
                                    <td style="border-bottom:none;border-top:none;">
                                        <br></br>
                                    </td>
                                </tr>
                            </t>
                            <tr style="border:1px solid black;border-left:none;border-right:none;">
                                <td style="border:1px solid black;border-left:none;border-right:none;border-right: 1px solid black;"></td>
                                <td style="border:1px solid black;border-left:none;border-right:none;border-right: 1px solid black;"></td>
                                <td style="border:1px solid black;border-left:none;border-right:none;border-right: 1px solid black;"></td>
                                <td style="border:1px solid black;border-left:none;border-right:none;text-align:right;border-right: 1px solid black;">
                                </td>
                                <td style="border:1px solid black;border-left:none;border-right:none;text-align:right;border-right: 1px solid black;">
                                </td>
                                <td style="border:1px solid black;border-left:none;border-right:none;text-align:right;border-right: 1px solid black;">
                                    <t t-esc="tot_pcs" />
                                </td>
                                <td style="border:1px solid black;border-left:none;border-right:none;text-align:right;border-right: 1px solid black;">
                                    <t t-esc="'%.2f'% (tot_amt)" />
                                </td>
                                <td style="border:1px solid black;border-left:none;border-right:none;text-align:right;">
                                    <t t-esc="'%.2f'% (tot_final_amt)" />
                                </td>
                            </tr>
                        </table>
                        <t t-if="o.tax_totals_json">
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>

                            <table style="width:100%;border: 1px solid black;border-top:none;">
                                <tr>
                                    <td style="width: 60%;padding:10px;">
                                        <span><b>TOTAL PAYABLE AMOUNT IN WORDS :</b></span><br/>
                                        <span t-esc="o.amount_to_text(o.amount_total, 'INR')"/>
                                    </td>

                                    <td style="width: 40%;padding:10px;border-left: 1px solid black;">
                                        <t t-if="tax_totals.get('amount_untaxed')">
                                            <div>
                                                <span>Untaxed Amount:</span>
                                                <span style="float: right;" t-esc="tax_totals['amount_untaxed']"/>
                                            </div>
                                        </t>

                                        <t t-foreach="tax_totals.get('subtotals', [])" t-as="subtotal">
                                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                            <t t-foreach="tax_totals['groups_by_subtotal'].get(subtotal_to_show, [])" t-as="amount_by_group">
                                                <div>
                                                    <span t-esc="amount_by_group['tax_group_name']"/>:
                                                    <span style="float: right;" t-esc="amount_by_group['tax_group_amount']"/>
                                                </div>
                                            </t>
                                        </t>

                                        <t t-if="tax_totals.get('amount_total')">
                                            <div>
                                                <b><span>Total Amount:</span></b>
                                                <b><span style="float: right;" t-esc="tax_totals['amount_total']"/></b>
                                            </div>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>