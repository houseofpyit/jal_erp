<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchase_requisition">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <table>
                            <tr>
                                <td>
                                    <t t-if="o.company_id.header_image">
                                        <img class="img img-responsive"
                                                t-att-src="image_data_uri(o.company_id.header_image)" alt="Logo"
                                                style="width:900px; height:100px;"/>
                                    </t>
                                </td>
                            </tr>
                        </table>

                        <table width="100%">
                            <tr width="100%">
                                <td width="30%">
                                    <span style="font-size:16px;">
                                        <b>Purchase Requisition:</b>
                                    </span>
                                    <br/>
                                    <span style="font-size:15px;" t-esc="o.name"/>
                                </td>
                                <td width="30%">
                                    <span style="font-size:16px;">
                                        <b>Date:</b>
                                    </span>
                                    <br/>
                                    <span style="font-size:15px;" t-if="o.date_order" t-esc="o.date_order.strftime('%d/%m/%Y')"/>
                                </td>
                                <td width="30%">
                                    <span style="font-size:16px;">
                                        <b>Sale No:</b>
                                    </span>
                                    <br/>
                                    <span style="font-size:15px;" t-if="o.sale_id" t-esc="o.sale_id.name"/>
                                </td>
                            </tr>
                            <br/><br/>
                            <tr>
                                <td>
                                    <span style="font-size:16px;">
                                        <b>User Name:</b>
                                        <t t-esc="o.user_id.name"/>
                                    </span>
                                </td>
                            </tr>
                        </table>

                        <table width="100%" style="border:1px solid #000; border-collapse:collapse;">
                            <tr>
                                <th style="width:40%;border:1px solid #000; padding:3px;font-size:13px;">Product</th>
                                <th style="width:40%;border:1px solid #000; padding:3px;font-size:13px;">Description</th>
                                <th style="width:10%;border:1px solid #000; padding:3px;font-size:13px;">QTY</th>
                                <th style="width:10%;border:1px solid #000; padding:3px;font-size:13px;">Unit</th>
                            </tr>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td style="border:1px solid #000; padding:3px;font-size:13px;">
                                        <span t-esc="line.product_id.name"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:3px;font-size:13px;">
                                        <span t-esc="line.description"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:3px;text-align: right;font-size:13px;padding-right:7px;">
                                        <span t-esc="line.qty"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:3px;text-align: right;font-size:13px;padding-right:7px;">
                                        <span t-esc="line.uom_id.name"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>