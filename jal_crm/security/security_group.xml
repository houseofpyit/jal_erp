<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_group_international" model="res.groups">
        <field name="name">International</field>
    </record>

    <record id="res_group_domestic" model="res.groups">
        <field name="name">Domestic</field>
    </record>

    <record id="res_group_trading" model="res.groups">
        <field name="name">Trading</field>
    </record>

    <record id="module_jal_purchase_req" model="ir.module.category">
        <field name="name">Purchase Requisition</field>
    </record>

    <record id="res_group_purchase_req_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="False"/>
        <field name="category_id" ref="jal_crm.module_jal_purchase_req"/>
    </record>

    <record id="res_group_purchase_req_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('res_group_purchase_req_user'))]"/>
        <field name="category_id" ref="jal_crm.module_jal_purchase_req"/>
    </record>

    <record id="res_group_purchase_req_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="implied_ids" eval="[(4, ref('res_group_purchase_req_manager'))]"/>
        <field name="category_id" ref="jal_crm.module_jal_purchase_req"/>
    </record>

</odoo>
