<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.rule" id="sale_team_rule">
        <field name="name">Sale Team Rule</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">['|',('team_id', '=', user.crm_team_id.id),('team_id', '=', False)]</field>
    </record>

    <record model="ir.rule" id="crm_team_rule">
        <field name="name">CRM Team Rule</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">['|',('team_id', '=', user.crm_team_id.id),('team_id', '=', False)]</field>
    </record>

    <record model="ir.rule" id="partner_team_rule">
        <field name="name">partner Team Rule</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|',('team_id', '=', user.crm_team_id.id),('team_id', '=', False)]</field>
    </record>

    <record id="partner_team_rule" model="ir.rule">
        <field name="active" eval="False"/>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'product'), ('name', '=', 'product_comp_rule')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>

    <record id="product.product_comp_rule" model="ir.rule">
        <field name="active" eval="False"/>
    </record>

    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'product'), ('name', '=', 'product_comp_rule')]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>

</odoo>
