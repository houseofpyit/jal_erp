<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_view_inherit_jal_crm" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="jal_crm.sale_order_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="before">
                <button name="action_confirm_pi" string="Confirm PI" class="btn-primary" type="object" attrs="{'invisible': ['|','|','|',('state', '!=', 'create_pi'),('is_acc_approve', '=', False),('is_dis_approve', '=', False),('is_team_approve', '=', False)]}" groups="jal_logistics.res_group_logistics_admin"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_mo" type="object" class="oe_stat_button" icon="fa-industry" attrs="{'invisible': [('mo_count', '=', 0)]}">
                    <field name="mo_count" widget="statinfo" string="MO"/>
                </button>
                <button name="action_view_logistics" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('logistics_count', '=', 0)]}">
                    <field name="logistics_count" widget="statinfo" string="Logistics"/>
                </button>
            </xpath> 
        </field>
    </record>

</odoo>                            