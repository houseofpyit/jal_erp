<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="production_exel_wiz_view" model="ir.ui.view">
        <field name="name">production.exel.wiz.form.view</field>
        <field name="model">production.exel.wiz</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="from_date"/>
                        <field name="shift_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="to_date"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate" name="production_xls_report" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_production_exel_wiz" model="ir.actions.act_window">
        <field name="name">Shift Wise Report</field>
        <field name="res_model">production.exel.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


