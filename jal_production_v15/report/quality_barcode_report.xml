<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="quality_barcode_report">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t t-set="barcodes" t-value="o.get_barcode_data()"/>
                <t t-set="total" t-value="len(barcodes)"/>
                <t t-foreach="range(0, total, 2)" t-as="i">
                    <t t-set="is_last" t-value="i + 2 &gt;= total"/>
                    <div t-attf-style="##{not is_last and 'page-break-after: always;' or ''}" style="border: none !important;">
                        <table class="table table-sm" style="width:100%;border: none !important;">
                            <tr>
                                <t t-if="i &lt; total">
                                    <td style="text-align: center; width:47%; padding: 2mm;border: none !important;">
                                        <t t-set="barcode_value"
                                            t-value="'Production No : %s | Quality No : %s | Date : %s | Shift : %s | Time : %s | Dryer : %s | Mesh : %s | %s' % (
                                                barcodes[i]['production_name'],
                                                barcodes[i]['name'],
                                                barcodes[i]['date'],
                                                barcodes[i]['shift_name'],
                                                barcodes[i]['shift_time'],
                                                barcodes[i]['dryer_name'],
                                                barcodes[i]['mesh_name'],
                                                barcodes[i]['parameters_string'],
                                            )"/>
                                        <t t-if="barcodes[i]['is_border']">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('QR', barcode_value, 300, 300)" style="width:90%;height:25%;border:1px solid black;" />
                                        </t>
                                        <t t-else="">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('QR', barcode_value, 300, 300)" style="width:90%;height:25%;" />
                                        </t>

                                    </td>
                                </t>

                                <!-- SPACE BETWEEN COLUMNS -->
                                <td style="width:6%;border: none !important;"></td>

                                <!-- RIGHT COLUMN -->
                                <t t-if="i + 1 &lt; total">
                                    <td style="text-align: center; width:47%; padding: 2mm;border: none !important;">
                                        <t t-set="barcode_value"
                                            t-value="'Production No : %s | Quality No : %s | Date : %s | Shift : %s | Time : %s | Dryer : %s | Mesh : %s | : %s' % (
                                                barcodes[i+1]['production_name'],
                                                barcodes[i+1]['name'],
                                                barcodes[i+1]['date'],
                                                barcodes[i+1]['shift_name'],
                                                barcodes[i+1]['shift_time'],
                                                barcodes[i+1]['dryer_name'],
                                                barcodes[i+1]['mesh_name'],
                                                barcodes[i+1]['parameters_string'],
                                            )"/>

                                        <t t-if="barcodes[i+1]['is_border']">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('QR', barcode_value, 300, 300)" style="width:90%;height:25%;border:1px solid black;" />
                                        </t>
                                        <t t-else="">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('QR', barcode_value, 300, 300)" style="width:90%;height:25%;" />
                                        </t>
                                    </td>
                                </t>

                                <!-- IF NO RIGHT COLUMN, ADD EMPTY CELL -->
                                <t t-if="i + 1 &gt;= total">
                                    <td style="width:47%; padding: 2mm;"></td>
                                </t>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
