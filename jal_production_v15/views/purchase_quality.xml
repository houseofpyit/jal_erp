    <record id="jal_purchase_quality_view_tree" model="ir.ui.view">
        <field name="name">jal.purchase.quality.view.tree</field>
        <field name="model">jal.purchase.quality</field>
        <field name="arch" type="xml">
            <tree decoration-success="stage == 'pass'" decoration-danger="stage == 'fail'" create="0" >
                <field name="name" />
                <field name="date" />
                <field name="product_id" />
                <field name="qty" />
                <field name="stage" decoration-success="stage == 'pass'" decoration-danger="stage == 'fail'" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="action_jal_purchase_quality" model="ir.actions.act_window">
        <field name="name">Purchase Quality</field>
        <field name="res_model">jal.purchase.quality</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('jal_purchase_quality_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('jal_purchase_quality_view_form')})]"/>
    </record>

