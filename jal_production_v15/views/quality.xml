<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='jal_quality_form'>
        <field name='name'>jal.quality.form</field>
        <field name='model'>jal.quality</field>
        <field name='arch' type='xml'>
            <form>
                <header>
                    <!-- <button string="Create PO" name="create_purchase_po" type="object" class="btn-primary" attrs="{'invisible': ['|',('state', '=', 'confirm'),('is_po_count' ,'!=', 0)]}" /> -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <!-- <button name="action_view_pur_order" type="object" class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('is_po_count', '=', 0)]}">
                        <field name="is_po_count" widget="statinfo" string="Purchase Order"/>
                    </button> -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name='company_id' invisible="1"/>
                            <field name='production_id' domain="[('state', '=','draft')]" options="{'no_create': True}" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name='product_tmpl_id' options="{'no_create': True}" domain="[('is_finished_goods', '=', True)]" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="grade_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="mesh_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="bucket_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="no_of_drum" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="approx_weight" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="date" force_save="1" readonly="1" />
                            <field name='user_id' force_save="1" readonly="1" />
                            <field name='shift_id' force_save="1" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <!-- <page string="Packing Products">
                            <field name="packing_line_ids" >
                                <tree editable="bottom">
                                    <field name="product_id" required="1" options="{'no_quick_create': True}"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="qty" attrs="{'readonly': [('parent.state','!=','draft')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Finish Products">
                            <field name="finish_line_ids" >
                                <tree editable="bottom">
                                    <field name="product_id" required="1" options="{'no_quick_create': True}"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="qty" attrs="{'readonly': [('parent.state','!=','draft')]}"/>
                                </tree>
                            </field>
                        </page> -->
                        <page name="quality_parameter" string="Quality Parameter">
                            <field name="quality_para_ids" attrs="{'readonly': [('state','!=','draft')]}">
                                <tree editable="bottom">
                                    <field name="item_attribute" readonly="1" force_save="1" />
                                    <field name="required_value" readonly="1" force_save="1"/>
                                    <field name="tollerance_range" invisible="1"/>
                                    <field name="is_mg_app" invisible="1"/>
                                    <field name="parameter_remarks" readonly="1" force_save="1"/>
                                    <field name="result_value" />
                                    <field name="remarks"/>
                                    <field name="attachment_ids" widget="many2many_binary" invisible="0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    

    <record model='ir.ui.view' id='jal_quality_tree'>
        <field name='name'>jal.quality.tree</field>
        <field name='model'>jal.quality</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name="date" />
                <field name="production_id" />
                <field name="product_tmpl_id" />
                <field name="grade_id" />
                <field name="mesh_id" />
                <field name="bucket_id" />
                <field name="shift_id" />
                <field name="state" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="view_jal_quality_filter" model="ir.ui.view">
        <field name="name">jal.quality.filter</field>
        <field name="model">jal.quality</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Search" filter_domain="['|','|','|','|','|','|',('name', 'ilike', self),('production_id', 'ilike', self),('product_tmpl_id', 'ilike', self),('shift_id', 'ilike', self),('grade_id', 'ilike', self),('mesh_id', 'ilike', self),('bucket_id', 'ilike', self)]"/>
                <field name="production_id"/>
                <field name="product_tmpl_id" />
                <field name="grade_id" />
                <field name="mesh_id" />
                <field name="bucket_id" />
                <field name="shift_id" />
                <separator/>
                    <filter string="Date" name="date" date="date"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_by_product_tmpl_id" domain="[]" context="{'group_by': 'product_tmpl_id'}"/>
                    <filter string="Shift" name="group_shift_id" domain="[]" context="{'group_by': 'shift_id'}"/>
                    <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_jal_quality" model="ir.actions.act_window">
        <field name="name">Quality</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">jal.quality</field>
        <!-- <field name="context">{"search_default_filter_draft":1,"search_default_filter_request":1}</field> -->
        <field name="view_mode">tree,form</field>
    </record>

</odoo>