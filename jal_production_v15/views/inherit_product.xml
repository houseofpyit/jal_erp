<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="is_raw_material"/>
                    <label for="is_raw_material"/>
                </span>
                <span class="d-inline-block">
                    <field name="is_finished_goods"/>
                    <label for="is_finished_goods"/>
                </span>
                <span class="d-inline-block">
                    <field name="is_spares"/>
                    <label for="is_spares"/>
                </span>
            </div>
            <xpath expr="//page[@name='inventory']" position="after">
                <page name="quality_parameter" string="Quality Parameter" >
                    <group>
                        <field name="is_quality_required" />
                    </group>
                    <field name="quality_para_ids" >
                        <tree editable="bottom">
                            <field name="item_attribute" options="{'no_quick_create': True}"/>
                            <field name="required_value" options="{'no_quick_create': True}"/>
                            <field name="tollerance_range" invisible="1"/>
                            <field name="remarks"/>
                            <field name="attachment_ids" widget="many2many_binary" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit_bucket_on_hand" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.bucket.on.hand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']/button[@name='action_open_quants']" position="after">
                <button type="object" name="action_view_bucket_on_hand" class="oe_stat_button" icon="fa-cubes">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value" widget="statinfo">
                            <field name="bucket_qty_hand_total" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">On Hand Bucket</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Product Template form: field + smart button -->
    <record id="product_template_only_form_view_inherit_bucket" model="ir.ui.view">
        <field name="name">product.template.only.form.inherit.bucket</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

        <!-- Also show inside the Inventory tab -->
        <xpath expr="//page[@name='inventory']/group" position="inside">
            <group string="Bucket Stock (All Variants)">
            <field name="bucket_qty_hand_total" readonly="1"/>
            </group>
        </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit_bucket" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.bucket</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='list_price']" position="after">
            <field name="bucket_qty_hand_total"/>
            </xpath>
        </field>
    </record>

</odoo>
