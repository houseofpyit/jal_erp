<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="is_raw_material"/>
                    <label for="is_raw_material"/>
                </span>
                <span class="d-inline-block">
                    <field name="is_finished_goods"/>
                    <label for="is_finished_goods"/>
                </span>
            </div>
            <xpath expr="//page[@name='inventory']" position="after">
                <page name="quality_parameter" string="Quality Parameter" attrs="{'invisible': [('is_finished_goods', '!=', True)]}">
                    <field name="quality_para_ids" >
                        <tree editable="bottom">
                            <field name="item_attribute" options="{'no_quick_create': True}"/>
                            <field name="required_value" options="{'no_quick_create': True}"/>
                            <field name="tollerance_range" invisible="1"/>
                            <field name="remarks"/>
                            <field name="attachment_ids" widget="many2many_binary" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
