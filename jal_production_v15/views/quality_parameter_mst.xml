<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="jal_product_attribute_view_form" model="ir.ui.view">
        <field name="name">jal.product.attribute.view.form</field>
        <field name="model">jal.product.attribute</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="jal_product_attribute_view_tree" model="ir.ui.view">
        <field name="name">jal.product.attribute.view.tree</field>
        <field name="model">jal.product.attribute</field>
        <field name="arch" type="xml">
            <tree string="Product Attribute">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_jal_product_attribute" model="ir.actions.act_window">
        <field name="name">Product Attribute</field>
        <field name="res_model">jal.product.attribute</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="quality_value_view_form" model="ir.ui.view">
        <field name="name">quality.value.view.form</field>
        <field name="model">quality.value</field>
        <field name="arch" type="xml">
            <form string="Quality Value">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="remarks" />
                            <field name="company_id" invisible="1" />
                        </group>
                        <group>
                            <field name="calculation_type" />
                            <field name="fr_value" attrs="{'invisible':[('calculation_type','!=','range')]}"/>
                            <field name="to_value" attrs="{'invisible':[('calculation_type','!=','range')]}"/>
                            <field name="req_value" attrs="{'invisible':[('calculation_type','=','range')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="quality_value_view_tree" model="ir.ui.view">
        <field name="name">quality.value.view.tree</field>
        <field name="model">quality.value</field>
        <field name="arch" type="xml">
            <tree string="Quality Value">
                <field name="name" />
                <field name="calculation_type" />
                <field name="fr_value" />
                <field name="to_value" />
                <field name="req_value" />
                <field name="remarks" />
            </tree>
        </field>
    </record>

    <record id="action_quality_value" model="ir.actions.act_window">
        <field name="name">Quality Value</field>
        <field name="res_model">quality.value</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
