<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_attribute_form_view" model="ir.ui.view">
        <field name="name">product.attribute.view.form.inherit</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='create_variant']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='create_variant']" position="after">
                <field name="attribute_type"/>
            </xpath>
            <xpath expr="//field[@name='value_ids']//field[@name='name']" position="after">
                <field name="amount" attrs="{'column_invisible': [('parent.attribute_type', '!=', 'bucket')]}"/>
                <field name="is_border" />
                <field name="weight" invisible="1"/>
                <field name="uom_id" invisible="1"/>
                <field name="packaging_type" invisible="1"/>
                <field name="packing_name_ids" widget="many2many_tags" invisible="1"/>
                <field name="pouch_type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="capacity_product_attribute_value_form" model="ir.ui.view">
        <field name="name">capacity.product.attribute.value.form</field>
        <field name="model">product.attribute.value</field>
        <field name="arch" type="xml" >
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="0" readonly="1" force_save="1" string="Name" />
                        </group>
                    </group>  
                    <group>
                        <group>  
                            <field name="weight" />
                            <field name="packing_name_ids" context="{'show_attribute': False}" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                        </group>  
                    </group>                
                </sheet>
            </form>
        </field>
    </record>

    <record id="capacity_product_attribute_value_tree" model="ir.ui.view">
        <field name="name">capacity.product.attribute.value.tree</field>
        <field name="model">product.attribute.value</field>
        <field name="arch" type="xml" >
            <tree sample="1">
                <field name="name" string="Name" />
                <field name="weight"/>
                <field name="packing_name_ids" widget="many2many_tags"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="action_capacity_product_attribute_value" model="ir.actions.act_window">
        <field name="name">Capacity Per Drum</field>
        <field name="res_model">product.attribute.value</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('attribute_id.attribute_type','=','bucket')]</field>
        <field name="context">{'attribute_type': 'bucket','show_attribute': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Record</p>
        </field>
        <field name="view_ids" eval="[(5,0,0), 
            (0,0,{'view_mode': 'tree', 'view_id': ref('capacity_product_attribute_value_tree')}), 
            (0,0,{'view_mode': 'form', 'view_id': ref('capacity_product_attribute_value_form')})
        ]"/>
    </record>

