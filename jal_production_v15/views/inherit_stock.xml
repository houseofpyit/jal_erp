<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_form_view_inherit_production" model="ir.ui.view">
        <field name="name">stock.picking.form.view.inherit.production</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="get_action_view_purchase_quality" class="oe_stat_button" icon="fa-list" attrs="{'invisible':[('purchase_quality_count','=', 0)]}" >
                    <field name="purchase_quality_count" widget="statinfo" string="Quality Test"/>
                </button>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button string="Send for Quality" name="create_purchase_quality" class="oe_highlight" attrs="{'invisible': ['|',('picking_type_code', '!=', 'incoming'),('send_quality', '=', True)]}" type="object"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="booking_date" force_save="1" readonly="1"/>
                <field name="production_id" invisible="1"/>
                <field name="quality_id" invisible="1"/>
                <field name="send_quality" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_uom']" position="before">
                <field name="demand_bucket" attrs="{'readonly': ['|',('state','!=','draft'),('uom_handling_type', '!=', 'multi')]}"/>
                <field name="done_bucket" attrs="{'readonly': ['|','|',('is_quantity_done_editable', '=', False),('state','!=','draft'),('uom_handling_type', '!=', 'multi')], 'column_invisible':[('parent.state', '=', 'draft')]}"/>
                <field name="uom_handling_type" invisible="1"/>
                <field name="quality_result" readonly="1" attrs="{'column_invisible':[('parent.picking_type_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='qty_done']" position="after">
                <field name="demand_bucket" invisible="1"/>
                <field name="done_bucket" attrs="{'readonly': [('uom_handling_type', '!=', 'multi')]}"/>
                <field name="uom_handling_type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_nosuggest_operations_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.nosuggest.operations.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="done_bucket" attrs="{'readonly': [('uom_handling_type', '!=', 'multi')]}"/>
                <field name="uom_handling_type" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="attributes">
                <attribute name="string" >Done Quantity</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_operations_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.operations.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='next_serial']" position="before">
                <field name="demand_bucket" readonly="1"/>
                <label for="done_bucket"/>
                    <div class="o_row">
                        <span><field name="done_bucket" readonly="1" force_save="1"/> / </span>
                        <span><field name="demand_bucket" readonly="1" /></span>
                        <span><field name="product_uom" readonly="1"/></span>
                    </div>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_form_inherit" model="ir.ui.view">
        <field name="name">stock.quant.form.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='quantity']" position="before">
                <field name="on_hand_bucket"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">view.move.line.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='qty_done']" position="before">
                <field name="done_bucket" string="Packing Unit"/>
            </xpath>
        </field>
    </record>

    <record id="stock_location_form_view_inherit_production" model="ir.ui.view">
        <field name="name">stock.location.form.view.inherit.production</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='return_location']" position="after">
                <field name="main_store_location" />
            </xpath>
        </field>
    </record>

</odoo>