<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_view_inherit_production" model="ir.ui.view">
        <field name="name">purchase.order.form.view.inherit.production</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object" name="get_action_view_purchase_quality" class="oe_stat_button" icon="fa-list" attrs="{'invisible':[('purchase_quality_count','=', 0)]}" >
                    <field name="purchase_quality_count" widget="statinfo" string="Quality Test"/>
                </button>
            </xpath>
            <xpath expr="//header/button[@name='action_bill']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='product_qty']" position="after">
                <field name="bucket" width="150px" attrs="{'readonly': [('uom_handling_type', '!=', 'multi')]}"/>
                <field name="uom_handling_type" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='products']/field[@name='tax_country_id']" position="before">
                <group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <button name="action_fetch" string="Load Product" class="btn-primary" type="object" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
